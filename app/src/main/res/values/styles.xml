<resources xmlns:tools="http://schemas.android.com/tools">
   <style name="primaryButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/btn_style_primary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
       <item name="android:width">100dp</item>
   </style>

    <style name="secondaryButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/btn_style_secondary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:width">100dp</item>
   </style>

    <style name="disableButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/btn_style_disabled</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:width">100dp</item>
   </style>

    <style name="circleButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/btn_style_circle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:tint">@color/white</item>
        <item name="android:width">64dp</item>
        <item name="android:height">64dp</item>
    </style>

    <style name="grayDarkBackground" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/layout_style_gray_dark</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="grayLightBackground" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/layout_style_gray_light</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
</resources>